<div class="container">
      <div class="container-fluid" index="mealNumOne">
        <h1>{{meal.name}}</h1>
        <img src="{{meal.imgURL}}" width="200px"><br><br><br>
        <p>{{meal.description}}</p>
        <p>Example Meal: {{meal.exampleMeal}}</p>
        <p>Calories: {{meal.calories}}</p>
      </div>

      <h1>Switch it up, edit your meal below....</h1>
      <!-- <p>{{userId}}</p> -->

      <div class="row container container-form">
          <form action="/users/{{userId}}/meals/{{meal.id}}?_method=PUT" method="POST">
              <div class="form-group">
                  <label for="name">Name:</label>
                  <input type="text" name="name" class="form-control">
              </div>
              <div class="form-group">
              		<label for="imgURL">Image URL:</label><br>
              		<input type="text" name="imgURL" class="form-control">
	            </div>
              <div class="form-group">
                  <label for="description">Description:</label>
                  <input type="text" name="description" class="form-control">
              </div>
              <div class="form-group">
                  <label for="calories">Calories:</label>
                  <input type="text" name="country" class="form-control">
              </div>
              <div class="form-group">
                  <label for="exampleMeal">Meal:</label>
                  <input type="text" name="exampleMeal" class="form-control">
              </div>
          </form>
      </div>
</div>

<div class="editButtons">
        <input type="submit" value="Save" class="btn btn-primary">

        <form action="/users/{{userId}}/meals/{{meal.id}}?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete This">
        </form>

        <a href="/users/{{userId}}" class="backButton">
            <input type="submit" value="Back" class="btn btn-warning">
        </a>
</div>
